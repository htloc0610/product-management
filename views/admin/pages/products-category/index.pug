extends ../../layouts/default.pug

block main

    h1 Danh mục sản phẩm
            
    .card.mb-3 
        .card-header Danh sách
            .card-body
                .row
                    .col-8
                    .col-4
                        a(
                            href=`${prefixAdmin}/products-category/create`
                            class = "btn btn-outline-success"
                        ) + Thêm mới

            table(
                class = "table table-hover table.sm"
                checkbox-multi
            )
                thead
                    tr  
                        th 
                            input(type="checkbox" name="checkall")
                        th STT 
                        th Hình ảnh 
                        th Tiêu đề
                        th Vị trí
                        th Trạng thái 
                        th Hành động
                    tbody
                        each item, index in records
                            tr 
                                td 
                                    input(
                                        type="checkbox"
                                        name="id"
                                        value=item.id
                                    )
                                td #{index + 1}
                                td
                                    img(
                                        src= item.thumbnail
                                        alt= item.title
                                        width="100px"
                                        height="auto"
                                    )
                                td #{item.title}
                                td 
                                    input(
                                        type = "number"
                                        value = item.position
                                        style= "width: 60px"
                                        min = "1"
                                        name = "position"
                                    )
                                td
                                    if (item.status == "active")
                                        a(
                                            href="javascript:;" 
                                            data-status = item.status
                                            data-id = item.id
                                            button-change-status
                                            class="badge bg-success"
                                            ) Hoạt động
                                    else
                                        a(
                                            href="javascript:;" 
                                            data-status = item.status
                                            data-id = item.id
                                            button-change-status
                                            class="badge bg-danger"
                                            ) Dừng hoạt động
                                td 
                                    a(
                                        href = ``
                                        class="btn btn-secondary btn-sm"
                                        ) Chi tiết
                                    a(
                                        href = ``
                                        class="btn btn-warning btn-sm ms-1"
                                        ) Sửa  
                                    button(
                                        class="btn btn-danger btn-sm ms-1"
                                        data-id = item.id
                                        button-delete
                                        ) Xoá
